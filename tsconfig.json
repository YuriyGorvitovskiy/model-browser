{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": false,
        "isolatedModules": false,
        "jsx": "react",
        "lib": ["dom", "es5", "es2015.iterable", "es2015.promise", "es2019"],
        "module": "commonjs",
        "outDir": "./build/js",
        "resolveJsonModule": true,
        "strict": false,
        "target": "es5",
        "esModuleInterop": true
    },
    "include": ["src/ts/**/*.ts", "src/ts/**/*.tsx"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
